# ═══════════════════════════════════════════════════════════
# Agentic Honeypot — Environment Configuration Template
# Copy this file to .env and fill in your actual values
# ═══════════════════════════════════════════════════════════

# --- GROQ API (REQUIRED) ---
GROQ_API_KEY=your_groq_api_key_here
# Optional: second Groq API key for fallback if primary hits rate limits
RECOVERY_KEY=your_backup_groq_key_here

# --- ElevenLabs TTS (Optional — for voice features) ---
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# --- Server ---
HOST=0.0.0.0
PORT=8001
DEBUG=false
API_KEY=your_api_key_here

# --- LLM ---
LLM_MODEL=llama-3.1-8b-instant
LLM_FALLBACK_MODEL=llama-3.1-8b-instant
LLM_TEMPERATURE=0.8
LLM_MAX_TOKENS=512
LLM_TIMEOUT=12

# --- PostgreSQL Database (Optional — for session persistence) ---
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=honeypot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here

# --- Persona Defaults (Optional — can be set via Admin Dashboard) ---
PERSONA_NAME=Priya Sharma
PERSONA_AGE=28
PERSONA_OCCUPATION=Software Engineer
PERSONA_LOCATION=Mumbai, Andheri West
